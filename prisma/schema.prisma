generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum CaseColor {
  black
  blue
  rose
}

enum PhoneModel {
  samsungs24
  samsungs25
  iphone15
  iphone16
  iphone17
}

enum CaseMaterial {
  silicone
  softpolycarbonate
}

enum CaseFinish {
  smooth
  textured
}

model Configuration {
  id              String        @id @default(cuid())
  width           Int
  height          Int
  imageUrl        String
  color           CaseColor?
  model           PhoneModel?
  material        CaseMaterial?
  finish          CaseFinish?
  croppedImageUrl String?
}
